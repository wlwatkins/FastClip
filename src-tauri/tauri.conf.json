{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fast-clip",
  "identifier": "com.fast-clip.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1425",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "FastClip",
        "width": 300,
        "height": 600,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
